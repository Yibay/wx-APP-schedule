<!--index.wxml-->
<view class="g-page-container">
  <view class="m-calendar">
    <!-- 月头部 -->
    <view class="month-header">
      <view class="last-month" bind:tap="handleToLastMonth">《</view>
      <view class="current-month">{{date.currentYear}} 年 {{date.currentMonth + 1}} 月</view>
      <view class="next-month" bind:tap="handleToNextMonth">》</view>
      <!-- <view class="settings">设置</view> -->
    </view>
    <!-- 周头部 -->
    <view class="week-header">
      <view class="day">日</view>
      <view class="day">一</view>
      <view class="day">二</view>
      <view class="day">三</view>
      <view class="day">四</view>
      <view class="day">五</view>
      <view class="day">六</view>
    </view>
    <!-- 日历表 -->
    <view class="date-header start-day-{{date.startDay}}" bind:tap="handleChangeDate">
      <view wx:for="{{date.days}}" wx:key="{{id}}" class="day" data-day="{{item.id}}" style="background-color: {{item.record.bgcolor}};color: {{item.record.color}};">{{item.id}}</view>
    </view>
    <!-- 颜色说明 -->
    <view class="color-intro">
      <view class="title">颜色说明:</view>
      <view class="content">
        <view wx:for="{{eventType}}" wx:key="{{text}}" class="type" style="background-color: {{item.bgcolor}};color: {{item.color}};">{{item.text}}</view>
      </view>
    </view>
  </view>
  <!-- 当日详情 -->
  <view class="m-record">
     <view class="date">{{date.currentYear}}年{{date.currentMonth + 1}}月{{date.currentDate}}日</view> 
    <!-- 设置当日事件类型 -->
    <view class="dateTypeBox">
      <label>选择活动类型:</label>
      <button class="SetDateType" bind:tap="handleSetDateType">选择</button>
    </view>
    <!-- 记录表单 -->
  </view>
</view>
