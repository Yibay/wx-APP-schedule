/**index.wxss**/
/* 日历组件 */
.m-calendar{
  font-size: 30rpx;
}
.m-calendar::before,.m-calendar::after{
  display: table;
  content: '';
  clear: both;
}
/* 日历组件：月头部 */
.m-calendar .month-header{
  display: flex;
  position: relative;
  justify-content: center;
  line-height: 3em;
  color: #f26293;
}
.m-calendar .month-header .current-month{
  margin: 0 130rpx;
}
.m-calendar .month-header .settings{
  position: absolute;
  right: 50rpx;
}
/* 日历组件：星期头部 */
.m-calendar .week-header{
  display: flex;
  color: #fdb7cf;
}
.m-calendar .week-header .day{
  flex: 1;
  text-align: center;
}
/* 日历组件：日期头部 */
.m-calendar .date-header::before,
.m-calendar .date-header::after{
  display: table;
  content: '';
  clear: both;
}
.m-calendar .date-header .day{
  display: flex;
  float: left;
  width: calc(100vw / 7 );
  height: calc(100vw / 7);
  padding: 25rpx;
  margin-bottom: -25rpx;
  border-radius: 50%;
  box-sizing: border-box;
  background: #efefef;
  background-clip: content-box;
  justify-content: center;
  align-items: center;
}
.m-calendar .date-header.start-day-1 .day:first-of-type{
  margin-left: calc(100vw / 7)
}
.m-calendar .date-header.start-day-2 .day:first-of-type{
  margin-left: calc(100vw / 7 * 2)
}
.m-calendar .date-header.start-day-3 .day:first-of-type{
  margin-left: calc(100vw / 7 * 3)
}
.m-calendar .date-header.start-day-4 .day:first-of-type{
  margin-left: calc(100vw / 7 * 4)
}
.m-calendar .date-header.start-day-5 .day:first-of-type{
  margin-left: calc(100vw / 7 * 5)
}
.m-calendar .date-header.start-day-6 .day:first-of-type{
  margin-left: calc(100vw / 7 * 6)
}
/* 日历组件：颜色说明 */
.m-calendar .color-intro::before,
.m-calendar .color-intro::after{
  display: table;
  content: '';
  clear: both;
}
.m-calendar .color-intro .title{
  margin-top: 30rpx;
  padding: 0 25rpx;
}
.m-calendar .color-intro .content .type{
  display: flex;
  float: left;
  width: calc(100vw / 7);
  height: calc(100vw / 7);
  padding: 25rpx;
  border-radius: 50%;
  box-sizing: border-box;
  background-clip: content-box;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #fff;
}

/* 记录表单 */
.m-record{
  padding: 0 25rpx;
  font-size: 30rpx;
}
.m-record .date{
  padding-top: 20rpx;
  border-top: 1px dashed #fdb7cf;
  line-height: 2em;
  font-weight: 700;
}
.m-record .dateTypeBox::before,
.m-record .dateTypeBox::after{
  display: table;
  content: '';
  clear: both;
}
.m-record .dateTypeBox label{
  float: left;
  line-height: 2.5em;
}
.m-record .SetDateType{
  float: left;
  width: 5em;
  margin-left: 20rpx;
  font-size: 30rpx;
}